<%= stylesheet_pack_tag "customers" %>
<div class="mx-auto container shadow-sm" style="width:100%; height:700px; margin-top:30px; background-color:#fff; border-radius:5px;">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="d-flex justify-content-center font-weight-bold" style="text-center">
        <p style="font-size:30px; margin-top:50px; margin-bottom:50px;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</p>
      </div>

      <div class="row font-weight-bold mt-2 justify-content-center">
        <label class="col-5 d-flex justify-content-start">会員ID</label>
        <div class="field col-5 d-flex justify-content-end">
          <%= @customer.id %>
        </div>
      </div>

      <div class="row font-weight-bold justify-content-center">
        <label class="col-5 d-flex justify-content-start">名前</label>
        <div class="field col-5 d-flex justify-content-end">
          <%= @customer.last_name %><%= @customer.first_name %>
        </div>
      </div>

      <div class="row font-weight-bold justify-content-center">
        <label class="col-5 d-flex justify-content-start">メールアドレス</label>
        <div class="field col-5 d-flex justify-content-end">
          <%= @customer.email %>
        </div>
      </div>

      <div class="row font-weight-bold justify-content-center">
        <label class="col-5 d-flex justify-content-start">会員ステータス</label>
        <div class="field col-5 d-flex justify-content-end">
          <% if @customer.is_deleted == false %>
            <span class="text-success"><strong>有効</strong></span>
          <% else %>
            <span class="text-black-50"><strong>退会</strong></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-5 text-center">
    <%= link_to "編集する" ,edit_admin_customer_path, class:"btn btn-info" %>
  </div>
</div>